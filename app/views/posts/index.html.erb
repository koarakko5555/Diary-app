<div class="space-y-6 w-3/4 max-w-lg mx-auto">
  <label class="block text-xl font-bold text-gray-700">学習ログ一覧</label>
  <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
    <% @posts.each do |post| %>
      <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <!-- カードのヘッダー -->
        <div class="p-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-800">
            <%= link_to post.title, post_path(post), class: "hover:underline" %>
          </h2>
          <p class="text-sm text-gray-500 mt-1">by <%= post.user.nickname %></p>
        </div>
        <!-- カードの本文 -->
        <div class="p-4">
          <p class="text-gray-600 text-sm"><%= truncate(post.content, length: 100) %></p>
        </div>
        <!-- カードのフッター -->
        <div class="p-4 bg-gray-50 text-right">
          <%= link_to "詳細を見る", post_path(post), class: "text-blue-500 hover:underline text-sm" %>
        </div>
      </div>
    <% end %>
  </div>
</div>